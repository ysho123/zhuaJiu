  height:24rpx;
}

.user_result_notCatched{
  width: 81rpx;
  height:24rpx;
}

.refresh{
  color: #FFFF00;
  text-decoration: underline;
}

.middleShareArea{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.middle_shareBtn1{
  width: 268rpx;
  height:90rpx;
  background-image : url('https://game-1256868251.cos.ap-guangzhou.myqcloud.com/zhuajiu/goPage/shareToFriend.png');
  background-color: transparent;
  background-size:268rpx 90rpx;
  margin-top: 10rpx;
}

.middle_shareBtn2{
  width: 268rpx;
  height:90rpx;
  background-image : url('https://game-1256868251.cos.ap-guangzhou.myqcloud.com/zhuajiu/goPage/shareToCircle.png');
  background-color: transparent;
  background-size:268rpx 90rpx;
  margin-top: 10rpx;
}

.btn_active{
  transform: scale(1.1);
}

.backIndex{
  width: 182rpx;
  height: 171rpx;
  background-image: url('https://game-1256868251.cos.ap-guangzhou.myqcloud.com/zhuajiu/goPage/indexBtn.png');
  background-size: 182rpx 171rpx;
  background-repeat :no-repeat;
  background-position : center;
  position: absolute;
  right: -30rpx;
  top: -30rpx;
}

.bottomArea{
  width: 100%;
  height: 10%;
  /* background-color: yellow; */
  opacity: 0.4;
}

.checkAgain{
  width: 122rpx;
  height: 122rpx;
  background-image: url('https://game-1256868251.cos.ap-guangzhou.myqcloud.com/zhuajiu/result/checkAgain.png');
  background-size: 122rpx 122rpx;
  background-repeat :no-repeat;
  background-position : center;
  position: absolute;
  right: -50rpx;
  bottom: 20rpx;
  animation: scaleButton 2s linear infinite;
}

@keyframes scaleButton{
  0%   {transform: scale(0.9)}
  25%  {transform: scale(1)}
  50% {transform: scale(1.1)}
  75%  {transform: scale(1)}
  100% {transform: scale(0.9)}
}