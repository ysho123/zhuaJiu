/* pages/mypage/mypage.wxss */

/* 盒子模型水平 */

.horizontal {
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -webkit-box-align: center; 
}

image{
  vertical-align: middle;
}
.flex-1 {
  -webkit-box-flex: 1;
}

.mypage{
  width: 100%;
  height: 100%;
  text-align: center;
}
.logs_box{
  margin-top: 40rpx;
  position: relative;
  top: 0;
  left: 0;
}
.logs_bg{
  width: 702rpx;
  height: 820rpx;
  margin: 0 auto;
}
.ranking-main {
  z-index: 100;
  width:676rpx;
  height: 820rpx;
  position: absolute;
  top: 0;
  left:50%;
  margin-left: -351rpx;
}
.ranking-tabar {
  width: 100%;
  height: 80rpx;
}
.ranking-tabar-item {
  display: inline-block;
  width: 334rpx;
  height: 80rpx;
  text-align: center;
  vertical-align: middle;
}

.ranking-tabar-item-content {
  color: #642920;
  font-size: 36rpx;
  font-weight:bold;
  line-height: 80rpx;
}
/* 选择色 */

.clickred {
  color: #ffbb29;
}

.ranking-list-item {
  width: 676rpx;
  padding: 20rpx 0;
  /* border-bottom: 1px solid #6e5038; */
  box-sizing: border-box;
}

.del_img{
  width: 41rpx;
  height: 33rpx;
}
.type_img{
  width: 84rpx;
  height: 60rpx;
}
.userPic{
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.hd_title,.hd_userName{
  font-size: 26rpx;
  color: #642920;
}
.hd_time,.hd_num{
  font-size: 22rpx;
  color: #808080;
}

.ranking-list-item-del{
  margin: 0 22rpx;
}
.ranking-list-item-title{
  margin-left: 20rpx;

}
.ranking-list-item-userName{
  padding-left: 20rpx;
  margin-right: 22rpx;
  width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  -webkit-white-space: nowrap;
}
.ranking-list-item-title,.ranking-list-item-userName{
  text-align: left;
}
.hd_title{
  overflow: hidden;
    word-break: break-all;
    text-overflow: ellispsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.bottm_box{
  background: #f0f0f0;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.contect_box{
  font-size: 24rpx;
  color: #642920;
  line-height: 100rpx;
}
.contect_btn{
  width: 44rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.contactBtn {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: transparent;
  border: 0;
  padding: 0;
  margin: 0;
  width: 50%;
  height: 100rpx;
}
button[plain] {
  border: 0;
}
.no_img{
  width: 124rpx;
  height: 68rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}
.no_txt{
  margin-top: 40rpx;
  color: #642920;
}
.tan_txt{
   font-size: 24rpx;
   color:#aaa;
   padding: 260rpx 200rpx 36rpx 200rpx;
}
.userinfo_btn{

   /* position: absolute;
   top: 760rpx;
   left: 125rpx;
   z-index: 120; */
   width: 250rpx;
   height: 60rpx;
   line-height: 60rpx;
   border-radius: 10rpx;
   margin:0 auto;

}
.userinfo_btn[plain]{
   padding: 0;
   /* margin: 0; */
   background: #000;
   color: #fff;
   font-size: 26rpx;
}
.tan{
   width: 100%;
   height: 100%;
   background: #fff;
   position: fixed;
   top: 0;
   left: 0;
   z-index: 100;
   text-align: center;
}
.tan_img{
   width: 600rpx;
   height: 700rpx;
   margin-top: 206rpx;
}

